<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- MAIN_SHOPCART -->
<mapper namespace="com.chimu.wine.dao.ShopCartDao">
    <!-- 结果映射 -->
    <!--<resultMap id="mainShopcartMap" type="MainShopcartEntity"></resultMap>-->
    
    <!-- 表所有字段 -->
    <sql id="allColumns">
        ID, UID, PID, SUM
    </sql>
    
    <!-- 根据条件查询数据 -->
    <select id="findMainShopCartByCondition" resultMap="ShopCart" parameterType="ShopCart">
        SELECT
        <include refid="allColumns" />
        FROM MAIN_SHOPCART WHERE 1 = 1
        <if test="uid != null and uid != ''">
            AND UID LIKE CONCAT('%',#{uid},'%')
        </if>
        <if test="pid != null and pid != ''">
            AND PID LIKE CONCAT('%',#{pid},'%')
        </if>
    </select>
    
    <!-- 插入数据 -->
    <insert id="insertMainShopCart" parameterType="ShopCart">
        INSERT INTO MAIN_SHOPCART (<include refid="allColumns" />)
        VALUES (
            #{id},
            #{uid},
            #{pid},
            #{sum}
        )
    </insert>
    
    <!-- 修改数据 -->
    <update id="updateMainShopCart" parameterType="ShopCart">
        UPDATE MAIN_SHOPCART SET
            UID = #{uid},
            PID = #{pid},
            SUM = #{sum}
        WHERE ID = #{id}
    </update>
    
    <!-- 根据主键批量删除数据 -->
    <delete id="deleteMainShopCartByIds" parameterType="list">
        DELETE FROM MAIN_SHOPCART WHERE ID IN
        <foreach collection="list" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>