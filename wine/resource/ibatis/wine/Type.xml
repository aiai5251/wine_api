<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- MAIN_TYPE -->
<mapper namespace="perfect_note.mainType">
    <!-- 结果映射 -->
    <resultMap id="mainTypeMap" type="MainTypeEntity"></resultMap>
    
    <!-- 表所有字段 -->
    <sql id="allColumns">
        ID, PID, NAME, TYPE
    </sql>
    
    <!-- 根据条件查询数据 -->
    <select id="findMainTypeByCondition" resultMap="mainTypeMap" parameterType="map">
        SELECT
        <include refid="allColumns" />
        FROM MAIN_TYPE WHERE 1 = 1
        <if test="pid != null and pid != ''">
            AND PID LIKE CONCAT('%',#{pid},'%')
        </if>
        <if test="name != null and name != ''">
            AND NAME LIKE CONCAT('%',#{name},'%')
        </if>
    </select>
    
    <!-- 插入数据 -->
    <insert id="insertMainType" parameterType="map">
        INSERT INTO MAIN_TYPE (<include refid="allColumns" />)
        VALUES (
            #{id},
            #{pid},
            #{name},
            #{type}
        )
    </insert>
    
    <!-- 修改数据 -->
    <update id="updateMainType" parameterType="map">
        UPDATE MAIN_TYPE SET
            PID = #{pid},
            NAME = #{name},
            TYPE = #{type}
        WHERE ID = #{id}
    </update>
    
    <!-- 根据主键批量删除数据 -->
    <delete id="deleteMainTypeByIds" parameterType="list">
        DELETE FROM MAIN_TYPE WHERE ID IN
        <foreach collection="list" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>