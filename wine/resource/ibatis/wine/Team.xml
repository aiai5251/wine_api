<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- MAIN_TEAM -->
<mapper namespace="perfect_note.mainTeam">
    <!-- 结果映射 -->
    <resultMap id="mainTeamMap" type="MainTeamEntity"></resultMap>
    
    <!-- 表所有字段 -->
    <sql id="allColumns">
        ID, UID, FRI_ID
    </sql>
    
    <!-- 根据条件查询数据 -->
    <select id="findMainTeamByCondition" resultMap="mainTeamMap" parameterType="map">
        SELECT
        <include refid="allColumns" />
        FROM MAIN_TEAM WHERE 1 = 1
        <if test="uid != null and uid != ''">
            AND UID LIKE CONCAT('%',#{uid},'%')
        </if>
        <if test="friId != null and friId != ''">
            AND FRI_ID LIKE CONCAT('%',#{friId},'%')
        </if>
    </select>
    
    <!-- 插入数据 -->
    <insert id="insertMainTeam" parameterType="map">
        INSERT INTO MAIN_TEAM (<include refid="allColumns" />)
        VALUES (
            #{id},
            #{uid},
            #{friId}
        )
    </insert>
    
    <!-- 修改数据 -->
    <update id="updateMainTeam" parameterType="map">
        UPDATE MAIN_TEAM SET
            UID = #{uid},
            FRI_ID = #{friId}
        WHERE ID = #{id}
    </update>
    
    <!-- 根据主键批量删除数据 -->
    <delete id="deleteMainTeamByIds" parameterType="list">
        DELETE FROM MAIN_TEAM WHERE ID IN
        <foreach collection="list" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>