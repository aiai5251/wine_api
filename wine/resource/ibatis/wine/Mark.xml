<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- MAIN_MARK -->
<mapper namespace="com.chimu.wine.dao.MarkDao">
    <!-- 结果映射 -->
    <!--<resultMap id="mainMarkMap" type="MainMarkEntity"></resultMap>-->
    
    <!-- 表所有字段 -->
    <sql id="allColumns">
        ID, PID, NAME, DETAIL
    </sql>
    
    <!-- 根据条件查询数据 -->
    <select id="findMainMarkByCondition" resultMap="Mark" parameterType="Mark">
        SELECT
        <include refid="allColumns" />
        FROM MAIN_MARK WHERE 1 = 1
        <if test="pid != null and pid != ''">
            AND PID LIKE CONCAT('%',#{pid},'%')
        </if>
        <if test="name != null and name != ''">
            AND NAME LIKE CONCAT('%',#{name},'%')
        </if>
    </select>
    
    <!-- 插入数据 -->
    <insert id="insertMainMark" parameterType="Mark">
        INSERT INTO MAIN_MARK (<include refid="allColumns" />)
        VALUES (
            #{id},
            #{pid},
            #{name},
            #{detail}
        )
    </insert>
    
    <!-- 修改数据 -->
    <update id="updateMainMark" parameterType="Mark">
        UPDATE MAIN_MARK SET
            PID = #{pid},
            NAME = #{name},
            DETAIL = #{detail}
        WHERE ID = #{id}
    </update>
    
    <!-- 根据主键批量删除数据 -->
    <delete id="deleteMainMarkByIds" parameterType="list">
        DELETE FROM MAIN_MARK WHERE ID IN
        <foreach collection="list" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>