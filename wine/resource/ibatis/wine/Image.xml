<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.chimu.wine.dao.ImageDao">
    <resultMap id="BaseResultMap" type="com.chimu.wine.bean.ImageBean">
    </resultMap>

    <insert id="addImage" parameterType="com.chimu.wine.bean.ImageBean">
        INSERT INTO image(product_id, url, banner_id, product_type) VALUES (#{product_id}, #{url}, #{banner_id}, #{product_type})
    </insert>
<!--商品图片-->
    <select id="getImagesByPid" resultType="String">
        SELECT url FROM image WHERE product_id = #{product_id} AND product_type = #{product_type}
    </select>

    <delete id="deleteImageByPid">
        DELETE FROM image WHERE product_id = #{product_id}
    </delete>
<!--首页活动banner图片-->
    <select id="getImagesByBid" resultType="String">
        SELECT url FROM image WHERE banner_id = #{banner_id}
    </select>

    <delete id="deleteImageByBid">
        DELETE FROM image WHERE banner_id = #{banner_id}
    </delete>
</mapper>