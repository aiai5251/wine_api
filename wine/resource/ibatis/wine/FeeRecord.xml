<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- MAIN_FEE_RECORD -->
<mapper namespace="com.chimu.wine.dao.FeeRecordDao">
    <!-- 结果映射 -->
    <!--<resultMap id="mainFeeRecordMap" type="MainFeeRecordEntity"></resultMap>-->
    
    <!-- 表所有字段 -->
    <sql id="allColumns">
        ID, UID, MONEY, FEE_MONEY
    </sql>
    
    <!-- 根据条件查询数据 -->
    <select id="findMainFeeRecordByCondition" resultMap="FeeRecord" parameterType="FeeRecord">
        SELECT
        <include refid="allColumns" />
        FROM MAIN_FEE_RECORD WHERE 1 = 1
        <if test="uid != null and uid != ''">
            AND UID LIKE CONCAT('%',#{uid},'%')
        </if>
        <if test="money != null and money != ''">
            AND MONEY LIKE CONCAT('%',#{money},'%')
        </if>
    </select>
    
    <!-- 插入数据 -->
    <insert id="insertMainFeeRecord" parameterType="FeeRecord">
        INSERT INTO MAIN_FEE_RECORD (<include refid="allColumns" />)
        VALUES (
            #{id},
            #{uid},
            #{money},
            #{feeMoney}
        )
    </insert>
    
    <!-- 修改数据 -->
    <update id="updateMainFeeRecord" parameterType="FeeRecord">
        UPDATE MAIN_FEE_RECORD SET
            UID = #{uid},
            MONEY = #{money},
            FEE_MONEY = #{feeMoney}
        WHERE ID = #{id}
    </update>
    
    <!-- 根据主键批量删除数据 -->
    <delete id="deleteMainFeeRecordByIds" parameterType="list">
        DELETE FROM MAIN_FEE_RECORD WHERE ID IN
        <foreach collection="list" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>