<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- MAIN_COUPON -->
<mapper namespace="com.chimu.wine.dao.CouponDao">
    <!-- 结果映射 -->
    <!--<resultMap id="mainCouponMap" type="MainCouponEntity"></resultMap>-->
    
    <!-- 表所有字段 -->
    <sql id="allColumns">
        ID, PRICE, PID, TITLE, UID, 
        BUILD_TIME, END_TIME, MAX_PRICE
    </sql>
    
    <!-- 根据条件查询数据 -->
    <select id="findMainCouponByCondition" resultMap="Coupon" parameterType="Coupon">
        SELECT
        <include refid="allColumns" />
        FROM MAIN_COUPON WHERE 1 = 1
        <if test="price != null and price != ''">
            AND PRICE LIKE CONCAT('%',#{price},'%')
        </if>
        <if test="pid != null and pid != ''">
            AND PID LIKE CONCAT('%',#{pid},'%')
        </if>
    </select>
    
    <!-- 插入数据 -->
    <insert id="insertMainCoupon" parameterType="Coupon">
        INSERT INTO MAIN_COUPON (<include refid="allColumns" />)
        VALUES (
            #{id},
            #{price},
            #{pid},
            #{title},
            #{uid},
            #{buildTime},
            #{endTime},
            #{maxPrice}
        )
    </insert>
    
    <!-- 修改数据 -->
    <update id="updateMainCoupon" parameterType="Coupon">
        UPDATE MAIN_COUPON SET
            PRICE = #{price},
            PID = #{pid},
            TITLE = #{title},
            UID = #{uid},
            BUILD_TIME = #{buildTime},
            END_TIME = #{endTime},
            MAX_PRICE = #{maxPrice}
        WHERE ID = #{id}
    </update>
    
    <!-- 根据主键批量删除数据 -->
    <delete id="deleteMainCouponByIds" parameterType="list">
        DELETE FROM MAIN_COUPON WHERE ID IN
        <foreach collection="list" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>