<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- MAIN_POINT -->
<mapper namespace="perfect_note.mainPoint">
    <!-- 结果映射 -->
    <resultMap id="mainPointMap" type="MainPointEntity"></resultMap>
    
    <!-- 表所有字段 -->
    <sql id="allColumns">
        ID, PID, USER_ID, POINT
    </sql>
    
    <!-- 根据条件查询数据 -->
    <select id="findMainPointByCondition" resultMap="mainPointMap" parameterType="map">
        SELECT
        <include refid="allColumns" />
        FROM MAIN_POINT WHERE 1 = 1
        <if test="pid != null and pid != ''">
            AND PID LIKE CONCAT('%',#{pid},'%')
        </if>
        <if test="userId != null and userId != ''">
            AND USER_ID LIKE CONCAT('%',#{userId},'%')
        </if>
    </select>
    
    <!-- 插入数据 -->
    <insert id="insertMainPoint" parameterType="map">
        INSERT INTO MAIN_POINT (<include refid="allColumns" />)
        VALUES (
            #{id},
            #{pid},
            #{userId},
            #{point}
        )
    </insert>
    
    <!-- 修改数据 -->
    <update id="updateMainPoint" parameterType="map">
        UPDATE MAIN_POINT SET
            PID = #{pid},
            USER_ID = #{userId},
            POINT = #{point}
        WHERE ID = #{id}
    </update>
    
    <!-- 根据主键批量删除数据 -->
    <delete id="deleteMainPointByIds" parameterType="list">
        DELETE FROM MAIN_POINT WHERE ID IN
        <foreach collection="list" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>