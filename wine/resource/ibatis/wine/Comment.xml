<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- MAIN_COMMENT -->
<mapper namespace="perfect_note.mainComment">
    <!-- 结果映射 -->
    <resultMap id="mainCommentMap" type="MainCommentEntity"></resultMap>
    
    <!-- 表所有字段 -->
    <sql id="allColumns">
        ID, PID, MESSAGE, UID, DATE
    </sql>
    
    <!-- 根据条件查询数据 -->
    <select id="findMainCommentByCondition" resultMap="mainCommentMap" parameterType="map">
        SELECT
        <include refid="allColumns" />
        FROM MAIN_COMMENT WHERE 1 = 1
        <if test="pid != null and pid != ''">
            AND PID LIKE CONCAT('%',#{pid},'%')
        </if>
        <if test="message != null and message != ''">
            AND MESSAGE LIKE CONCAT('%',#{message},'%')
        </if>
    </select>
    
    <!-- 插入数据 -->
    <insert id="insertMainComment" parameterType="map">
        INSERT INTO MAIN_COMMENT (<include refid="allColumns" />)
        VALUES (
            #{id},
            #{pid},
            #{message},
            #{uid},
            #{date}
        )
    </insert>
    
    <!-- 修改数据 -->
    <update id="updateMainComment" parameterType="map">
        UPDATE MAIN_COMMENT SET
            PID = #{pid},
            MESSAGE = #{message},
            UID = #{uid},
            DATE = #{date}
        WHERE ID = #{id}
    </update>
    
    <!-- 根据主键批量删除数据 -->
    <delete id="deleteMainCommentByIds" parameterType="list">
        DELETE FROM MAIN_COMMENT WHERE ID IN
        <foreach collection="list" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>