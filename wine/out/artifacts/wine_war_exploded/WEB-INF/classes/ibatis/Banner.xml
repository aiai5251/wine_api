<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.chimu.wine.dao.BannerDao" >
    <resultMap id="BaseResultMap" type="com.chimu.wine.bean.BannerBean" >
        <result column="id" property="id" jdbcType="INTEGER" />
        <result column="title" property="title" jdbcType="VARCHAR" />
        <result column="url" property="url" jdbcType="VARCHAR" />
        <result column="imgurl" property="imgurl" jdbcType="VARCHAR" />
    </resultMap>

    <select id="banner_list_select" resultMap="BaseResultMap">
        SELECT * FROM main_banner
    </select>

    <select id="byId">
        SELECT id, title, url, imgurl FROM main_banner WHERE id = #{id}
    </select>

    <insert id="add" parameterMap="BaseResultMap" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO main_banner(title, url, imgurl) VALUES (#{title}, #{url}, #{imgurl})
    </insert>

    <update id="modify" >
        UPDATE main_banner SET title = #{title}, url = #{url}, imgurl = #{imgurl} WHERE id = #{id}
    </update>
</mapper>


