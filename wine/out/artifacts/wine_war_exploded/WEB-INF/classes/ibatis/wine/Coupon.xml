<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.chimu.wine.dao.CouponDao">
    <resultMap id="mainCouponMap" type="com.chimu.wine.bean.CouponBean">
    </resultMap>

    <select id="getCouponById" resultMap="mainCouponMap">
        SELECT * FROM coupon WHERE id = #{id}
    </select>

    <select id="getCouponByPid" resultMap="mainCouponMap" parameterType="List">
        SELECT * FROM coupon WHERE pid = #{pid}
    </select>

    <select id="getCouponByUid" resultMap="mainCouponMap" parameterType="List">
        SELECT * FROM coupon WHERE uid = #{uid}
    </select>

</mapper>