<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- MAIN_ORDER -->
<mapper namespace="com.chimu.wine.dao.OrderDao">
    <!-- 结果映射 -->
    <!--<resultMap id="mainOrderMap" type="MainOrderEntity"></resultMap>-->
    
    <!-- 表所有字段 -->
    <sql id="allColumns">
        ID, UID, ORDER_NUM, ORDER_STATUS, REMARK, 
        ORDER_TIME, ORDER_SUMPRICE, ACTUALPAY, ADDRESS_ID, IS_STATUS, 
        PID, COUNT
    </sql>
    
    <!-- 根据条件查询数据 -->
    <select id="findMainOrderByCondition" resultMap="Order" parameterType="Order">
        SELECT
        <include refid="allColumns" />
        FROM MAIN_ORDER WHERE 1 = 1
        <if test="uid != null and uid != ''">
            AND UID LIKE CONCAT('%',#{uid},'%')
        </if>
        <if test="orderNum != null and orderNum != ''">
            AND ORDER_NUM LIKE CONCAT('%',#{orderNum},'%')
        </if>
    </select>
    
    <!-- 插入数据 -->
    <insert id="insertMainOrder" parameterType="Order">
        INSERT INTO MAIN_ORDER (<include refid="allColumns" />)
        VALUES (
            #{id},
            #{uid},
            #{orderNum},
            #{orderStatus},
            #{remark},
            #{orderTime},
            #{orderSumprice},
            #{actualpay},
            #{addressId},
            #{isStatus},
            #{pid},
            #{count}
        )
    </insert>
    
    <!-- 修改数据 -->
    <update id="updateMainOrder" parameterType="Order">
        UPDATE MAIN_ORDER SET
            UID = #{uid},
            ORDER_NUM = #{orderNum},
            ORDER_STATUS = #{orderStatus},
            REMARK = #{remark},
            ORDER_TIME = #{orderTime},
            ORDER_SUMPRICE = #{orderSumprice},
            ACTUALPAY = #{actualpay},
            ADDRESS_ID = #{addressId},
            IS_STATUS = #{isStatus},
            PID = #{pid},
            COUNT = #{count}
        WHERE ID = #{id}
    </update>
    
    <!-- 根据主键批量删除数据 -->
    <delete id="deleteMainOrderByIds" parameterType="list">
        DELETE FROM MAIN_ORDER WHERE ID IN
        <foreach collection="list" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>